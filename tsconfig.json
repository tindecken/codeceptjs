{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "ES2022",        // Output modern JS
    "lib": ["ES2022", "DOM"],  // Use ES2022 + browser types
    "module": "commonjs",        // Output ESM modules
    "esModuleInterop": true,
    "strictNullChecks": false,
    "types": ["codeceptjs", "node"],
    "declaration": true,
    "skipLibCheck": true,
    "sourceMap": true,
  },
  "exclude": ["node_modules"]
}